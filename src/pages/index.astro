---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Grube_guitars">
  <main
    class="w-screen h-[200vh] flex bg-gradient-to-b from-indigo-950/[0.2] to-indigo-800/[0]"
  >
    <div
      class="absolute w-full h-full bg-gradient-to-b from-red-900/[0] to-indigo-950/[0.5]"
    >
    </div>
    <section class="z-50 w-full flex flex-col justify-start items-center">
      <h1
        class="text-7xl md:text-9xl text-center bg-clip-text text-transparent font-dancing bg-gradient-to-r from-slate-200 to-orange-300/[0.7] py-40 md:py-20"
      >
        Grubeguitars
      </h1>
      <h2 class="text-3xl font-Righteous text-slate-300 p-10">
        <span>Sebastian</span> Grube
      </h2>
      <h3 class="text-2xl font-Righteous text-slate-300">
        <span>Luthier</span> de guitarras y bajos
      </h3>
    </section>
  </main>
</Layout>

<style>
  div {
    clip-path: polygon(0 0, 100% 0, 100% 50%, 50% 100%, 0% 50%);
  }
  span {
    color: rgb(224, 193, 152);
  }
</style>
