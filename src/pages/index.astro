---
import Layout from "../layouts/Layout.astro";
import CardAbout from "../components/Card_about.astro";
---

<Layout title="Grube_guitars">
  <main class="w-full  flex flex-col justify-center items-center">
 
    <h1 class="z-50 lg:h-10 text-7xl my-40 md:text-9xl lg:text-9xl font-dancing lg:mt-10  md:mt-40 md:my-20">Grubeguitars</h1>
	  <CardAbout/>  
  </main>
 
</Layout>

<style>
  main {
    position: absolute;
  
    background: linear-gradient(rgb(46, 20, 0), rgba(0, 0, 255, 0));
  }
  .ball-back-violet {
    position: absolute;
    width: 500px;
    height: 500px;
    background-image: radial-gradient(
      farthest-side,
      rgba(68, 40, 77, 0.478),
      rgba(0, 0, 255, 0)
    );
    border-radius: 100rem;
  }
  .ball-back-green {
    position: absolute;
    margin-top: 250px;
    margin-left: -250px;
    width: 500px;
    height: 500px;
    background-image: radial-gradient(
      farthest-side,
      rgba(10, 27, 16),
      rgba(0, 0, 255, 0)
    );
    border-radius: 100rem;
  }
</style>
