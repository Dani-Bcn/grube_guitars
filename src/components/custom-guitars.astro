---
import { Image } from "astro:assets";
const gutitars = [
  "../assets/email.webp",
  "../assets/evernote.webp",
  "../assets/facebook.png",
  "../assets/instagram.webp",
  "../assets/twitter.webp",
  "../assets/xing.webp",
];
---

<main class="w-[90vw] h-screen m-auto flex flex-col justify-center items-center mt-40">
  <span
  class="absolute z-10 w-[90vw] -ml-0 lg:-ml-5 h-full bg-gradient-to-t to-orange-950/[0.2] from-slate-800/[1] "
>
  </span>
  <h1 class="z-50 text-red-700 text-2xl font-Righteous pb-20 -mt-20">Guitarras personalizadas</h1>
  <nav class="z-50  flex flex-wrap justify-center gap-5">
    {
      gutitars.map((img, i) => (
        <a href="">
          <img src={img} alt="images" class="z-50 w-20 h-20" />
        </a>
      ))
    }
  </nav>

  <style>
    span {
      clip-path: polygon(0 50%, 50% 0, 100% 50%, 100% 100%, 0% 100%);
    }
  </style>
</main>
